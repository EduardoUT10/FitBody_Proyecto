<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitBody_Proyecto.MainPage">

    <StackLayout>
        <Label Text="Consumir web service Get" FontSize="20" HorizontalTextAlignment="Center">
        </Label>
        <Label x:Name="texto" Text="">
        </Label>
        <Button Text="Consultar"
                x:Name="btnGet"
                Clicked="btnGet_Clicked">
        </Button>
        <ListView x:Name="MyListView" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label x:Name="lblcalentamiento" Text="{Binding calentamiento}"/>
                            
                            <Label x:Name="lblcardio" Text="{Binding cardio}"/>
                            
                            <Label x:Name="lbltonificacion" Text="{Binding tonificacion}"/>
                            
                            <Label x:Name="lblpiernas" Text="{Binding piernas}"/>
                            
                            <Label x:Name="lblestiramiento" Text="{Binding estiramiento}"/>

                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>

</ContentPage>
